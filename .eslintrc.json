{
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": true
  },
  "rules": {
    "indent": [2, 2],
    "semi": [2, "always"],
    "no-unused-vars": 0,
    "no-console": 0
  },
  "globals": {
    "jQuery": true,
    "$": true
  }
}
